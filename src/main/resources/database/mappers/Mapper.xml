<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winter.app.product.ProductDAO">
	<sql id="search">		
		WHERE PRODUCTNAME LIKE '%'||#{search}||'%'
	</sql>
	
	<!-- getTotal -->
	<select id="getTotal" resultType="Long" parameterType="Pager">
		SELECT COUNT(PRODUCTNUM) FROM PRODUCT
		<include refid="search"></include>
	</select>
	
	<!-- getList -->
	<select id="getList" parameterType="ProductDTO" resultType="Pager">
		SELECT * FROM
		(
			SELECT ROWNUM R, RG.* FROM
				(
					SELECT * FROM PRODUCT
					<include refid="search" /> 
					ORDER BY PRODUCTNUM DESC
				) RG
		)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
</mapper>