<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winter.app.board.qna.QnaDAO">
	<sql id="search">
		<where>
			<if test="kind == 'kind1'">
				BOARDTITLE LIKE '%'||#{search}||'%'
			</if>
			<if test="kind == 'kind2'">
				BOARDCONTENTS LIKE '%'||#{search}||'%'
			</if>
			<if test="kind == 'kind3'">
				BOARDWRITER LIKE '%'||#{search}||'%'
			</if>

		</where>
	</sql>

	<select id="getTotalCount" parameterType="Pager"
		resultType="Long">
		SELECT COUNT(BOARDNUM) FROM QNA
		<include refid="search" />
	</select>

	<select id="getList" parameterType="Pager" resultType="QnaDTO">
		SELECT * FROM
		(SELECT ROWNUM R, N.* FROM
			(
			SELECT * FROM QNA
			<include refid="search" />
			ORDER BY BOARDREF DESC, BOARDSTEP ASC
			)
		N)
		WHERE R BETWEEN #{startRow}
		AND #{lastRow}
	</select>

	<select id="getDetail" parameterType="QnaDTO"
		resultMap="getDetailResult">
		SELECT * FROM QNA
		LEFT JOIN QNAFILES
		USING (BOARDNUM)
		WHERE
		BOARDNUM=#{boardNum}
	</select>

	<resultMap type="QNADTO" id="getDetailResult">
		<id column="BOARDNUM" property="boardNum" />
		<result column="BOARDTITLE" property="boardTitle" />
		<result column="BOARDContents" property="boardContents" />
		<result column="BOARDWriter" property="boardWriter" />
		<result column="BOARDDATE" property="boardDate" />
		<result column="BOARDHIT" property="boardHit" />
		<result column="BOARDREF" property="boardRef" />
		<result column="BOARDSTEP" property="boardStep" />
		<result column="BOARDDEPTH" property="boardDepth" />
		<collection property="fileDTOs" javaType="List"
			ofType="BoardFileDTO">
			<id property="fileNum" column="FILENUM" />
			<result property="fileName" column="FILENAME" />
			<result property="oriName" column="ORINAME" />
		</collection>
	</resultMap>

</mapper>